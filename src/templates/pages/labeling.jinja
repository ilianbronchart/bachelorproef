<div id="recording-labeler" class="container-fluid px-4">
  <div id="error-message" class="alert alert-danger mb-4"></div>
  <div class="row">
    <div class="col-md-9">
      {% include "components/labeling/labeling-canvas.jinja" %}
      {% include "components/labeling/labeling-controls.jinja" %}
      <div id="annotations-container"
           hx-get="/labeling/annotations"
           hx-trigger="load"
           hx-swap="outerHTML"></div>
    </div>
    <div class="col-md-3">
      <div class="d-flex flex-column h-100"
           hx-get="/simrooms/{{ sim_room_id }}/classes"
           hx-trigger="annotations-loaded from:window"
           hx-swap="outerHTML"
           hx-target="this"></div>
    </div>
  </div>
</div>
